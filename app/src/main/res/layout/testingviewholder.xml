<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/inputdesign"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="MyText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/testCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testtextview"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="MyText"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/testtextview"
            android:src="@drawable/deliverytjpg" />

        <TextView
            android:id="@+id/testCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testCost"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="MyText"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/testDeliverydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testCredit"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textStyle="italic|bold"
            android:textColor="@android:color/black"
            android:text="MyText"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/empt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testDeliverydate"
            android:enabled="false"
            android:textSize="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empt"

            android:text="@string/click_here_to_track_details"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>